<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.force.cinemaline">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".module.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_lunch"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".module.welcome.ui.WelcomeActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".module.main.ui.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".module.main.ui.CityActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.setup.ui.SetingActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.setup.ui.Feedback"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.setup.ui.Help"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.setup.ui.Aboutus"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".module.setup.ui.Shareseting"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.detail.ui.DetailActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".module.detail.ui.StillActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.main.ui.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.main.ui.ForgetActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.main.ui.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.detail.ui.GalleryActivity"
            android:theme="@style/AppTheme.FullScreen"/>
    </application>

</manifest>